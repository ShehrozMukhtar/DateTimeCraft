<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    tools:context=".Time_stamp_time_Activity"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title"
        android:background="#FF393E46"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME STAMP TO DATE"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/back"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/montserratbold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/date_title_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/date_text_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME STAMP: "
            android:textColor="@color/white"
            android:fontFamily="@font/montserratbold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/times_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1695189481966"
            android:textColor="#00ADB5"
            app:layout_constraintLeft_toRightOf="@id/date_text_0"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/montserrat_semibold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/date_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_title_0"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE :"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratbold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03:13:11:22 AM"
            android:textColor="#00ADB5"
            app:layout_constraintLeft_toRightOf="@id/date_text"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/montserrat_semibold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/date_title_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/date_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE :"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratbold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:13:11:22"
            android:textColor="#00ADB5"
            app:layout_constraintLeft_toRightOf="@id/date_text_1"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/montserrat_semibold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:id="@+id/date_title_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_title_2"
        app:layout_constraintRight_toRightOf="parent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/select_date"
            android:layout_width="150dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="#FF049CA4"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/calendar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PICK TIME"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratbold"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/reset"
            android:layout_width="150dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toRightOf="@id/select_date"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="#FFF9ED69"
            app:layout_constraintRight_toRightOf="parent"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/calendar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESET TIME"
                android:textColor="#FF6A2C70"
                android:fontFamily="@font/montserratbold"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15dp"
                />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/date_title_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangleshape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_title_4"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:id="@+id/enter_chunk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER TIME STAMP"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratbold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:layout_marginLeft="2dp"
            />
        <EditText
            android:id="@+id/numm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1695189481966"
            android:textColorHint="#909090"
            android:textColor="#00ADB5"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/enter_chunk"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="20dp"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/montserrat_semibold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_title_5"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangleshape"
        android:id="@+id/plus"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:src="@drawable/tot"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APPLY"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserratbold"
            />

    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/date_title_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangleshape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plus"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:id="@+id/enter_chunk_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER TIME CHUNK"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratbold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:layout_marginLeft="2dp"
            />
        <EditText
            android:id="@+id/numa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PAYLOAD"
            android:textColorHint="#909090"
            android:textColor="#00ADB5"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/enter_chunk_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="20dp"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/montserrat_semibold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@id/plus_1"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="+"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="#049CA4"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/date_title_6"
       app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="24dp"
        android:fontFamily="@font/montserrat_semibold"
        />

    <TextView
        android:id="@+id/neg"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:background="#049CA4"
        android:fontFamily="@font/montserrat_semibold"
        android:text="-"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/plus_1"
        app:layout_constraintTop_toBottomOf="@+id/date_title_6" />
</androidx.constraintlayout.widget.ConstraintLayout>