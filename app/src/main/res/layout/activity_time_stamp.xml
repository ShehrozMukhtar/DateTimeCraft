            android:id="@+id/date_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D &amp; T :"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratbold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="August 19, 2023 - 15:13:11:22"
            android:textColor="#00ADB5"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toRightOf="@id/date_text_1"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/montserrat_semibold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="30dp"
        android:id="@+id/date_title_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_title_2"
        app:layout_constraintRight_toRightOf="parent"
